#:kivy 1.0

<Controller>:
  #Connects Python to GUI ids
  #from Python: to GUI id
  #Current Data
  city: city_lb
  temperature: temperature_lb
  conditions: conditions_lb
  img_source: img_source_lb
  highest: highest_lb
  lowest: lowest_lb
  #Hours Data
  hrs0: id_0hrs
  hrs1: id_1hrs
  hrs2: id_2hrs
  hrs3: id_3hrs
  hrs4: id_4hrs
  hrs5: id_5hrs
  hrs6: id_6hrs
  hrs7: id_7hrs
  hrs8: id_8hrs
  hrs9: id_9hrs
  hrs10: id_10hrs
  hrs11: id_11hrs
  hrs12: id_12hrs
  hrs13: id_13hrs
  hrs14: id_14hrs
  hrs15: id_15hrs
  hrs16: id_16hrs
  hrs17: id_17hrs
  hrs18: id_18hrs
  hrs19: id_19hrs
  hrs20: id_20hrs
  hrs21: id_21hrs
  hrs22: id_22hrs
  hrs23: id_23hrs

  BoxLayout:
    orientation: 'vertical'
    padding: 35

    # creating Canvas
    canvas:
      Color:
        rgba: 135 / 255., 206 / 255., 235 / 255., 1
      Rectangle:
        pos: self.pos
        size: self.size

    Label:
      id: city_lb
      text: 'Minsk'
      font_size: 45
    Label:
      id: temperature_lb
      text: '7°C'
      font_size: 80
    Label:
      id: conditions_lb
      text: 'Cloudy'
      font_size: 25
    Image:
      id:img_source_lb
      source: 'icons/weather_icon.png'

    BoxLayout:
      orientation: 'horizontal'

      Label:
        id: highest_lb
        text: 'H:9°'
        font_size: 30
      Label:
        id: lowest_lb
        text: 'L:-4°'
        font_size: 30
    
    ScrollView:
      do_scroll_x: True  # Disable horizontal scrolling
      do_scroll_y: False  # Enable vertical scrolling
      size_hint: None, None
      size: 700, 200
    
      BoxLayout:
        orientation: 'horizontal'
        size_hint_x: None
        width: self.minimum_width

        # Repeated forecast item
        RepeaterBox:
          id: id_0hrs
          time_text: '0am'
          image_source: 'icons/weather_icon.png'
          temp_text: '-4°'
        RepeaterBox:
          id: id_1hrs
          time_text: '1am'
