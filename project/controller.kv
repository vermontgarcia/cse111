#:kivy 1.0


<Controller>:
  #PY: GUI
  city: city_lb
  temperature: temperature_lb
  conditions: conditions_lb
  img_source: img_source_lb
  highest: highest_lb
  lowest: lowest_lb
  
  PageLayout
    # Main Page
    BoxLayout:
      orientation: 'vertical'
      padding: 35

      # creating Canvas
      canvas:
        Color:
          rgba: 135 / 255., 206 / 255., 235 / 255., 1
        Rectangle:
          pos: self.pos
          size: self.size

      Label:
        id: city_lb
        text: 'Minsk'
        font_size: 45
      Label:
        id: temperature_lb
        text: '7°C'
        font_size: 80
      Label:
        id: conditions_lb
        text: 'Cloudy'
        font_size: 25
      Image:
        id:img_source_lb
        source: 'icons/weather_icon.png'

      BoxLayout:
        orientation: 'horizontal'

        Label:
          id: highest_lb
          text: 'H:9°'
          font_size: 30
        Label:
          id: lowest_lb
          text: 'L:-4°'
          font_size: 30
      
      ScrollView:
        do_scroll_x: True  # Disable horizontal scrolling
        do_scroll_y: False  # Enable vertical scrolling
        size_hint: None, None
        size: 700, 200
      
        BoxLayout:
          orientation: 'horizontal'
          size_hint_x: None
          width: self.minimum_width

          # Repeated forecast item
          RepeaterBox:
            id: 0hrs
            time_text: '0am'
            image_source: 'icons/weather_icon.png'
            temp_text: '-4°'
          RepeaterBox:
            id: 1hrs
